{
	"extends": "@hexatool/tsconfig",
	"compilerOptions": {
		"target": "esnext",
		"lib": ["ESNext"],
		"moduleDetection": "force",
		"baseUrl": ".",
		"module": "esnext",
		"moduleResolution": "bundler",
		"esModuleInterop": true
	},
	"include": ["src/**/*", "scripts/**/*", "global.d.ts"],
	"exclude": ["**/dist/**", "node_modules"]
}
