{
	"name": "@hexadrop/eslint-config",
	"version": "0.0.1-beta.20",
	"description": "Opinionated ESLint ruleset designed for large teams and projects",
	"keywords": [
		"lint",
		"eslint",
		"eslint-config",
		"monorepo",
		"scalable",
		"scale",
		"typescript",
		"prettier"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hexadrop/eslint-config.git"
	},
	"homepage": "https://github.com/hexadrop/eslint-config",
	"bugs": {
		"url": "https://github.com/hexadrop/eslint-config/issues"
	},
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "esno scripts/typegen.ts && tsup",
		"build:types": "esno scripts/typegen.ts",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prepublish": "esno scripts/typegen.ts && tsup",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@eslint/compat": "1.1.1",
		"@stylistic/eslint-plugin": "2.8.0",
		"@typescript-eslint/eslint-plugin": "8.6.0",
		"@typescript-eslint/parser": "8.6.0",
		"astro-eslint-parser": "1.0.3",
		"eslint-config-flat-gitignore": "0.3.0",
		"eslint-flat-config-utils": "0.4.0",
		"eslint-import-resolver-typescript": "3.6.3",
		"eslint-merge-processors": "0.1.0",
		"eslint-parser-plain": "0.1.0",
		"eslint-plugin-astro": "1.2.4",
		"eslint-plugin-format": "0.1.2",
		"eslint-plugin-import-x": "4.3.0",
		"eslint-plugin-jsonc": "2.16.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "17.10.3",
		"eslint-plugin-perfectionist": "3.6.0",
		"eslint-plugin-react": "7.36.1",
		"eslint-plugin-react-hooks": "4.6.2",
		"eslint-plugin-react-refresh": "0.4.12",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-unicorn": "55.0.0",
		"eslint-plugin-unused-imports": "4.1.4",
		"globals": "15.9.0",
		"jsonc-eslint-parser": "2.4.0",
		"local-pkg": "0.5.0",
		"prettier": "3.3.3",
		"prettier-plugin-astro": "0.14.1",
		"tslib": "2.7.0"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.8",
		"@eslint/config-inspector": "0.5.4",
		"@hexadrop/tsconfig": "0.0.5",
		"@types/bun": "1.1.10",
		"@types/eslint": "9.6.1",
		"astro": "4.15.11",
		"eslint": "9.11.1",
		"eslint-typegen": "0.3.2",
		"esno": "4.8.0",
		"jiti": "1.21.6",
		"react": "18.3.1",
		"tsup": "8.3.0",
		"typescript": "5.6.2"
	}
}
