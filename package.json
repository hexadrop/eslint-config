{
	"name": "@hexadrop/eslint-config",
	"version": "0.0.2",
	"description": "Opinionated ESLint ruleset designed for large teams and projects",
	"keywords": [
		"lint",
		"eslint",
		"eslint-config",
		"monorepo",
		"scalable",
		"scale",
		"typescript",
		"prettier"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hexadrop/eslint-config.git"
	},
	"homepage": "https://github.com/hexadrop/eslint-config",
	"bugs": {
		"url": "https://github.com/hexadrop/eslint-config/issues"
	},
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "bun run scripts/typegen.ts && tsup",
		"build:types": "bun run scripts/typegen.ts",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prepublish": "bun run scripts/typegen.ts && tsup",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"eslint": "^9.17.0"
	},
	"dependencies": {
		"@stylistic/eslint-plugin": "2.12.1",
		"@typescript-eslint/eslint-plugin": "8.18.2",
		"@typescript-eslint/parser": "8.18.2",
		"astro-eslint-parser": "1.1.0",
		"eslint-config-flat-gitignore": "0.3.0",
		"eslint-flat-config-utils": "0.4.0",
		"eslint-import-resolver-typescript": "3.7.0",
		"eslint-merge-processors": "0.1.0",
		"eslint-parser-plain": "0.1.0",
		"eslint-plugin-astro": "1.3.1",
		"eslint-plugin-format": "0.1.3",
		"eslint-plugin-import-x": "4.6.1",
		"eslint-plugin-jsonc": "2.18.2",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "17.15.1",
		"eslint-plugin-perfectionist": "4.4.0",
		"eslint-plugin-react": "7.37.3",
		"eslint-plugin-react-hooks": "5.1.0",
		"eslint-plugin-react-refresh": "0.4.16",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-unicorn": "56.0.1",
		"eslint-plugin-unused-imports": "4.1.4",
		"globals": "15.14.0",
		"jsonc-eslint-parser": "2.4.0",
		"local-pkg": "1.0.0",
		"prettier": "3.4.2",
		"prettier-plugin-astro": "0.14.1",
		"tslib": "2.8.1"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.11",
		"@eslint/config-inspector": "0.7.1",
		"@hexadrop/tsconfig": "0.0.5",
		"@types/bun": "1.1.16",
		"astro": "5.1.4",
		"eslint": "9.17.0",
		"eslint-typegen": "0.3.2",
		"jiti": "2.4.2",
		"react": "19.0.0",
		"tsup": "8.3.5",
		"typescript": "5.7.3"
	}
}
