{
	"name": "@hexatool/eslint-config",
	"version": "1.0.9",
	"description": "A TypeScript ESLint ruleset designed for large teams and projects",
	"keywords": [
		"lint",
		"eslint",
		"eslint-config",
		"monorepo",
		"scalable",
		"scale",
		"typescript",
		"prettier"
	],
	"homepage": "https://github.com/hexatool/eslint-config",
	"bugs": {
		"url": "https://github.com/hexatool/eslint-config/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/eslint-config"
	},
	"license": "MIT",
	"files": [
		"config",
		"index.js",
		"patch.js"
	],
	"exports": {
