{
	"name": "@hexadrop/eslint-config",
	"version": "0.0.1-beta.12",
	"description": "Opinionated ESLint ruleset designed for large teams and projects",
	"keywords": [
		"lint",
		"eslint",
		"eslint-config",
		"monorepo",
		"scalable",
		"scale",
		"typescript",
		"prettier"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hexadrop/eslint-config.git"
	},
	"homepage": "https://github.com/hexadrop/eslint-config",
	"bugs": {
		"url": "https://github.com/hexadrop/eslint-config/issues"
	},
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "esno scripts/typegen.ts && tsup",
		"build:types": "esno scripts/typegen.ts",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prepublish": "esno scripts/typegen.ts && tsup",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@eslint/compat": "1.0.3",
		"@stylistic/eslint-plugin": "2.1.0",
		"@typescript-eslint/eslint-plugin": "7.13.0",
		"@typescript-eslint/parser": "7.13.0",
		"astro-eslint-parser": "1.0.2",
		"eslint-config-flat-gitignore": "0.1.5",
		"eslint-flat-config-utils": "0.2.5",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-merge-processors": "0.1.0",
		"eslint-parser-plain": "0.1.0",
		"eslint-plugin-astro": "1.2.2",
		"eslint-plugin-format": "0.1.1",
		"eslint-plugin-import-x": "0.5.1",
		"eslint-plugin-jsonc": "2.16.0",
		"eslint-plugin-markdown": "5.0.0",
		"eslint-plugin-n": "17.8.1",
		"eslint-plugin-perfectionist": "2.10.0",
		"eslint-plugin-react": "7.34.2",
		"eslint-plugin-react-hooks": "4.6.2",
		"eslint-plugin-react-refresh": "0.4.7",
		"eslint-plugin-simple-import-sort": "12.1.0",
		"eslint-plugin-unicorn": "53.0.0",
		"eslint-plugin-unused-imports": "4.0.0",
		"globals": "15.4.0",
		"jsonc-eslint-parser": "2.4.0",
		"local-pkg": "0.5.0",
		"prettier": "3.3.2",
		"prettier-plugin-astro": "0.14.0",
		"tslib": "2.6.3"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.5",
		"@eslint/config-inspector": "0.4.10",
		"@hexadrop/tsconfig": "0.0.5",
		"@types/bun": "1.1.3",
		"@types/eslint": "8.56.10",
		"astro": "4.10.1",
		"eslint": "9.4.0",
		"eslint-typegen": "0.2.4",
		"esno": "4.7.0",
		"jiti": "1.21.6",
		"react": "18.3.1",
		"tsup": "8.1.0",
		"typescript": "5.4.5"
	}
}
